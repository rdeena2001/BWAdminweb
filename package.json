{
  "name": "bwadmin-monorepo",
  "version": "1.0.0",
  "description": "BWAdmin - Resort/Hotel Booking Platform (Monorepo)",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:start\"",
    "start": "concurrently \"npm run server:start\" \"npm run client:start\"",
    "client:start": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "server:start": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "server:install": "cd server && npm install",
    "install:all": "npm run client:install && npm run server:install",
    "build": "npm run client:build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "react",
    "express",
    "admin",
    "hotel",
    "booking",
    "monorepo"
  ],
  "author": "BWAdmin Team",
  "license": "MIT",
  "engines": {
    "node": "20.19.6"
  }
}